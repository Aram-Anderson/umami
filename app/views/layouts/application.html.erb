<!DOCTYPE html>
<html>
  <head>
    <title>Umami</title>
    <%= csrf_meta_tags %>
    <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <main>
    <% flash.each do |name, msg| %>
    <%= content_tag :div, sanitize(msg), class: name %>
    <% end %>
    <ul id="dropdown1" class="dropdown-content">
      <li><%= link_to "All Items", items_path %></li>
    </ul>
    <nav>
      <div class="nav-wrapper">
        <a class="brand-logo"><%= image_tag 'navlogo.png', height: 60 %></a>
        <a href="/cart"><i class="material-icons right" id="cart">shopping_cart</i></a>
        <ul class="right hide-on-med-and-down">
          <li><a class="dropdown-button" href="#!" data-activates="dropdown1">Navigation<i class="material-icons right">arrow_drop_down</i></a></li>
        </ul>
      </div>
    </nav>

    <div class="row">
      <div class="col m1">

      </div>
     <div class="col s10 m10">
       <div class="card-panel transparent-white">
    <%= yield %>
       </div>
   </div>
  </div>
  </main>

  <nav>
    <div class="nav-wrapper">
      <ul id="nav-mobile" class="left hide-on-med-and-down">
      </ul>
    </div>
  </nav>
  </body>
</html>
