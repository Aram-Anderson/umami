<h4>Your Cart</h4>

<table class="striped">
  <thead>
    <tr>
      <th></th>
      <th>Item Image</th>
      <th>Item Name</th>
      <th>Item Description</th>
      <th>Item Quantity</th>
      <th>Item Price</th>
      <th>Item Total</th>
    </tr>
  </thead>
  <% @items.each do |item| %>
  <tbody>
    <tr>
      <td><%= link_to "Remove", cart_path(item_id: item.id), class: "waves-effect waves-light btn",  method: 'delete' %></td>
      <td><%= image_tag item.image, width: '75px' %></td>
      <td><%= link_to item.name, item_path(item) %></td>
      <td><%= truncate(item.description) %></td>
      <td><%= @cart.count_of(item.id) %></td>
      <td><%= item.price %></td>
      <td><%= @cart.subtotal(item.id) %></td>
    </tr>
  </tbody>
  <% end %>
  <tbody>
    <tr>
      <td>Order Total: <%= @cart.total_cost %></td>
    </tr>
  </tbody>
</table>
