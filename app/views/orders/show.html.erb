<h5>Order for <%= current_user.name %> at <%= @order.created_at %></h5>

<div class="row">
 <div class="col s12 m12">
   <div class="card-panel transparent-white">
<table class="bordered centered">
  <thead>
    <tr>
      <th></th>
      <th>Item Image</th>
      <th>Item Name</th>
      <th>Item Description</th>
      <th>Item Quantity</th>
      <th>Item Price</th>
      <th>Item Total</th>
    </tr>
  </thead>
  <% @order.items.each do |item| %>
  <tbody>
    <tr>
      <td></td>
      <td><%= image_tag item.image, width: '75px' %></td>
      <td><%= link_to item.name, item_path(item) %></td>
      <td><%= truncate(item.description) %></td>
      <td><%= find_quantity(item, @order) %></td>
      <td><%= item.to_money %></td>
      <td><%= @cart.subtotal(item.id) %></td>
    </tr>
  </tbody>
  <% end %>
  <tbody>
    <tr>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td>Order Total: <%= @cart.total_cost %></td>
    </tr>
  </tbody>
</table>
</div>
</div>
</div>
